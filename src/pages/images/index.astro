---
import Layout from '@/layouts/Layout.astro';
import { Image, Picture } from 'astro:assets';

import post05Img from '@/assets/images/post-05.png';
---

<Layout title="Imagenes">
	<h1 class="text-5xl dark:text-white">imagenes</h1>
	<h1>img</h1>
	<img
		loading="eager"
		src="/assets/images/post-05.png"
		width="250"
		height="250"
	/>
	<h1>Image</h1>
	<Image src={post05Img} width="250" height="250" alt="Imagen del post" />
	<h1>style</h1>
	<Image
		src={post05Img}
		style={{
			width: '250px',
			height: '250px',
		}}
		width="500"
		height="500"
		alt="Imagen del post"
	/>
	<h1>quality="low"</h1>
	<Image
		src={post05Img}
		quality="low"
		width="250"
		height="250"
		alt="Imagen del post"
	/>

	<h1>quality="high"</h1>
	<Image
		src={post05Img}
		quality="high"
		width="250"
		height="250"
		alt="Imagen del post"
	/>

	<h1>formato</h1>
	<Image
		src={post05Img}
		format="avif"
		width="250"
		height="250"
		alt="Imagen del post"
	/>

	<h1>Picture formats</h1>
	<Picture
		src={post05Img}
		formats={['webp', 'avif', 'jpeg']}
		width="250"
		height="250"
		alt="Imagen del post"
	/>

	<h1>Picture sizes</h1>
	<Picture
		src={post05Img}
		widths={[240, 540, 720, post05Img.width]}
		sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}
		width="250"
		height="250"
		alt="Imagen del post"
	/>

	<h1>Picture densities</h1>
	<Picture
		src={post05Img}
		width={post05Img.width / 2}
		densities={[1.5, 2]}
		alt="Imagen del post"
	/>
	<!-- <Image src={post05Img} width="250" height="250" alt="Imagen del post" /> -->

	<div
		style={{
			height: '3000px',
		}}>
	</div>

	<img
		loading="lazy"
		src="/assets/images/post-04.png"
		width="250"
		height="250"
	/>
</Layout>

<style>
	@reference '@styles/global.css';
	h1 {
		@apply text-white mt-10;
	}
</style>
